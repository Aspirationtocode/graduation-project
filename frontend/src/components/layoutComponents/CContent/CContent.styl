.content
  padding 0 20px 30px 20px
  display flex
  flex-direction column
  flex 1
  min-height 0

.header
  display flex
  align-items center
  justify-content space-between
  box-shadow: 4px 13px 21px -12px rgba(0, 0, 0, 0.35);
  padding 20px
  flex-shrink 0
  margin-bottom 10px
  border 1px solid #eeeeee
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px
  background-color #fff

.body
  flex-grow 1
  min-height 0
  overflow auto
  